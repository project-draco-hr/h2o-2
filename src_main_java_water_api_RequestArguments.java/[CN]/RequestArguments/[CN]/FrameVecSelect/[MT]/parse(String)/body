{
  int is[]=new int[2];
  for (  String col : input.split(",")) {
    try {
      int idx=Integer.valueOf(col.trim());
      if (idx < 0 || idx >= fr().vecs().length)       throw new IllegalArgumentException("Column " + col + " not part of Frame "+ _key);
      if (find(is,idx) != -1)       throw new IllegalArgumentException("Column " + col + " is already selected.");
      checkLegality(fr().vecs()[idx]);
      is=add(is,idx);
    }
 catch (    NumberFormatException nfe) {
      throw new IllegalArgumentException("Column #" + col + " is not a number.");
    }
  }
  return Arrays.copyOf(is,len(is));
}
