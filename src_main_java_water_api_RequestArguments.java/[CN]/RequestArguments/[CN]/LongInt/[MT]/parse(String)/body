{
  long i;
  try {
    i=Long.parseLong(input);
  }
 catch (  NumberFormatException e) {
    double d=Double.parseDouble(input);
    i=(long)d;
    if (i != d)     throw new IllegalArgumentException(_name + "Value " + input+ " is not a valid long integer.");
  }
  if ((i < _min) || (i > _max))   throw new IllegalArgumentException(_name + "Value " + i+ " is not between "+ _min+ " and "+ _max+ " (inclusive)");
  return i;
}
