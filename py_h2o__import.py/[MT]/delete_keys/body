def delete_keys(node=None, pattern=None, timeoutSecs=30):
    if (not node):
        node = h2o.nodes[0]
    kwargs = {'filter': pattern, }
    storeViewResult = h2o_cmd.runStoreView(node, timeoutSecs=timeoutSecs, **kwargs)
    keys = storeViewResult['keys']
    for k in keys:
        node.remove_key(k['key'])
    deletedCnt = len(keys)
    return deletedCnt
