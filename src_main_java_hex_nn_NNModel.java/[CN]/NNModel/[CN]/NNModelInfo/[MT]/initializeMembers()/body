{
  randomizeWeights();
  for (int i=0; i < parameters.hidden.length; ++i) {
    if (parameters.activation == NN.Activation.Rectifier || parameters.activation == NN.Activation.RectifierWithDropout || parameters.activation == NN.Activation.Maxout || parameters.activation == NN.Activation.MaxoutWithDropout) {
      Arrays.fill(biases[i],i == 0 ? 0.5 : 1.);
    }
 else     if (parameters.activation == NN.Activation.Tanh || parameters.activation == NN.Activation.TanhWithDropout) {
      Arrays.fill(biases[i],0.0);
    }
  }
  Arrays.fill(biases[biases.length - 1],0.0);
}
