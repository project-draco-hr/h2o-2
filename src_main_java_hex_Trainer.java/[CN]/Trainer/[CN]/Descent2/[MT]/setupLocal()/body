{
  _node=new NodeDescent(_ls,_ws,_bs,_key);
  if (!_key.home()) {
    Thread thread=new Thread(){
      @Override public void run(){
        while (!_done) {
          if (!_node.sync()) {
            try {
              Thread.sleep(10);
            }
 catch (            InterruptedException ex) {
            }
          }
        }
      }
    }
;
    thread.setDaemon(true);
    thread.start();
  }
}
