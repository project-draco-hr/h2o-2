{
  StringBuilder sb=new StringBuilder(bytes.length * 2);
  for (  byte b : bytes) {
switch (b) {
case '%':
      sb.append("%%");
    break;
case '.':
  sb.append("%d");
break;
case '/':
sb.append("%s");
break;
case ':':
sb.append("%c");
break;
case '\\':
sb.append("%b");
break;
case '"':
sb.append("%q");
break;
case '\0':
sb.append("%z");
break;
default :
sb.append((char)b);
break;
}
}
return sb;
}
