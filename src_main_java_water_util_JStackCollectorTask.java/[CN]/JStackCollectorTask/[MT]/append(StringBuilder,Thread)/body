{
  sb.append('"');
  sb.append(t.getName());
  sb.append('"');
  if (t.isDaemon())   sb.append(" daemon");
  sb.append(" prio=");
  sb.append(t.getPriority());
  sb.append(" tid=");
  sb.append(t.getId());
  sb.append("\n  java.lang.Thread.State: ");
  sb.append(t.getState());
  sb.append('\n');
}
