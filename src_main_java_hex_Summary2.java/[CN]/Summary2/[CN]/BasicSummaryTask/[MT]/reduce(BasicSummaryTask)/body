{
  for (int c=0; c < _finite_min.length; c++) {
    double min1=_finite_min[c];
    double max1=_finite_max[c];
    double min2=other._finite_min[c];
    double max2=other._finite_max[c];
    if (Double.isNaN(min1))     _finite_min[c]=min2;
 else     if (!Double.isNaN(min2))     _finite_min[c]=Math.min(min1,min2);
    if (Double.isNaN(max1))     _finite_max[c]=max2;
 else     if (!Double.isNaN(max2))     _finite_max[c]=Math.max(max1,max2);
  }
}
