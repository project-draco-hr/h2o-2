{
  DKV.put(_self,new Value(_self,""));
  new TAtomic<List>(){
    @Override public List atomic(    List old){
      if (old == null)       old=new List();
      Job[] jobs=old._jobs;
      old._jobs=Arrays.copyOf(jobs,jobs.length + 1);
      old._jobs[jobs.length]=Job.this;
      return old;
    }
  }
.fork(LIST);
}
