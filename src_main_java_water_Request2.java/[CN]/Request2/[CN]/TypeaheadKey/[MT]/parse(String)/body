{
  Key k=Key.make(input);
  if (_type != null) {
    Value v=DKV.get(k);
    if (v != null && !compatible(_type,v.get()))     throw new IllegalArgumentException(input + ":" + errors()[0]);
    if (v == null && _required)     throw new IllegalArgumentException("Key '" + input + "' does not exist!");
  }
  return k;
}
