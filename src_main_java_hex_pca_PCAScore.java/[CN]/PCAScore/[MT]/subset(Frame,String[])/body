{
  Vec[] dvecs=new Vec[feat.length];
  String[] dnames=new String[feat.length];
  Vec[] vecs=data.vecs();
  String[] names=data.names();
  for (int i=0; i < feat.length; i++) {
    int idx=data.find(feat[i]);
    if (idx == -1)     throw new IllegalArgumentException("Incompatible dataset: Column " + feat[i] + " does not exist in source!");
    dvecs[i]=vecs[idx];
    dnames[i]=names[idx];
  }
  return new Frame(dnames,dvecs);
}
