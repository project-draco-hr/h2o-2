{
  javax.swing.SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      createAndShowGUI();
    }
  }
);
  final Thread mainThread=Thread.currentThread();
  Runtime.getRuntime().addShutdownHook(new Thread(){
    public void run(){
      try {
        h2oLauncher.destroyProcess();
        mainThread.join();
      }
 catch (      Exception e) {
      }
    }
  }
);
}
