@classmethod
def setUpClass(cls):
    global SEED, localhost
    SEED = h2o.setup_random_seed()
    localhost = h2o.decide_if_localhost()
    h2o.beta_features = True
    if localhost:
        h2o.build_cloud(node_count=NODES, java_heap_GB=4)
    else:
        h2o_hosts.build_cloud_with_hosts(java_heap_GB=4)
