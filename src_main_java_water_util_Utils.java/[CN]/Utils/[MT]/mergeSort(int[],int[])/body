{
  int[] res=new int[a.length + b.length];
  int i=0, j=0;
  for (int k=0; k < res.length; ++k) {
    if (i == a.length) {
      System.arraycopy(b,j,res,k,res.length - k);
      break;
    }
    if (j == b.length) {
      System.arraycopy(a,i,res,k,res.length - k);
      break;
    }
    res[k]=(a[i] > b[j]) ? b[j++] : a[i++];
  }
  return res;
}
