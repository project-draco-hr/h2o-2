def tear_down_cloud(nodeList=None, sandboxIgnoreErrors=False):
    if (not nodeList):
        nodeList = nodes
    try:
        for n in nodeList:
            n.terminate()
            verboseprint('tear_down_cloud n:', n)
    finally:
        check_sandbox_for_errors(sandboxIgnoreErrors=sandboxIgnoreErrors, python_test_name=python_test_name)
        nodeList[:] = []
