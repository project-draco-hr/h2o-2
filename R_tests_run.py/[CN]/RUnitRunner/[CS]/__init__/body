def __init__(self, test_root_dir, num_clouds, nodes_per_cloud, base_port, xmx, output_dir):
    '\n        Constructor.\n\n        @param test_root_dir:\n        @param num_clouds: Number of H2O clouds to start.\n        @param nodes_per_cloud: Number of H2O nodes to start per cloud.\n        @param base_port: Base H2O port (e.g. 54321) to start choosing from.\n        @param xmx: Java -Xmx parameter.\n        @param output_dir: Directory for output files.\n        @return: The object.\n        '
    self.test_root_dir = test_root_dir
    self.num_clouds = num_clouds
    self.nodes_per_cloud = nodes_per_cloud
    self.base_port = base_port
    self.output_dir = output_dir
    self.clouds = []
    self.tests = []
    for i in range(self.num_clouds):
        cloud = H2OCloud(i, self.nodes_per_cloud, self.base_port, xmx, self.output_dir)
        self.clouds.append(cloud)
