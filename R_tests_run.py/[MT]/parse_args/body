def parse_args(argv):
    global g_base_port
    global g_num_clouds
    global g_wipe_output_dir
    i = 1
    while (i < len(argv)):
        s = argv[i]
        if (s == '--baseport'):
            i += 1
            if (i > len(argv)):
                usage()
            g_base_port = int(argv[i])
        elif (s == '--numclouds'):
            i += 1
            if (i > len(argv)):
                usage()
            g_num_clouds = int(argv[i])
        elif (s == '--wipe'):
            g_wipe_output_dir = True
        else:
            usage()
        i += 1
