{
  final int n=xy.length;
  double res=yy;
  for (int i=0; i < n; ++i) {
    double x=0;
    for (int j=0; j < n; ++j) {
      x+=xx[i][j] * beta[j];
    }
    res+=(0.5 * x + xy[i]) * beta[i];
  }
  if (!(res >= 0))   throw new LSMSolverException("Generalized Gradient: Can not solved this problem.");
  return res;
}
