{
  _start=-1;
  _len=len2;
  byte[] buf=new byte[len * 4 + OFF];
  UDP.set4(buf,0,len2);
  if (len2 > 65535)   throw H2O.unimpl();
  for (int i=0; i < len; i++) {
    if (!(Short.MIN_VALUE <= ls[i] && ls[i] < Short.MAX_VALUE))     throw H2O.unimpl();
    UDP.set2(buf,(i << 2) + OFF + 0,(short)xs[i]);
    UDP.set2(buf,(i << 2) + OFF + 2,(short)ls[i]);
  }
  _mem=buf;
}
