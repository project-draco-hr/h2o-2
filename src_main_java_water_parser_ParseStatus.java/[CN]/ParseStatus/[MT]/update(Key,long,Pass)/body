{
  new TAtomic<ParseStatus>(){
    @Override public ParseStatus atomic(    ParseStatus old){
      if (old._phase == phase) {
        old._sofar+=steps;
      }
 else       if (old._phase == null || old._phase.ordinal() < phase.ordinal()) {
        old._phase=phase;
        old._sofar=steps;
      }
 else {
        return null;
      }
      return old;
    }
    @Override public ParseStatus alloc(){
      return new ParseStatus();
    }
  }
.invoke(statusKey);
}
