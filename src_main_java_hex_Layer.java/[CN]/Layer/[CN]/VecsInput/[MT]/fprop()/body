{
  if (_chunks == null)   _chunks=new Chunk[vecs.length];
  for (int i=0; i < vecs.length; i++) {
    Chunk c=_chunks[i];
    if (c == null || c._vec != vecs[i] || _pos < c._start || _pos >= c._start + c._len)     _chunks[i]=vecs[i].chunk(_pos);
  }
  ChunksInput.set(_chunks,_a,(int)(_pos - _chunks[0]._start),_subs,_muls,_categoricals);
}
