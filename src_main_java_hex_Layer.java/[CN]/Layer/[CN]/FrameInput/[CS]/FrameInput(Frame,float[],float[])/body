{
  _frame=frame;
  _len=frame.numRows();
  if (means != null) {
    _means=means;
    _sigmas=sigmas;
  }
 else {
    _means=new float[frame.numCols() - 1];
    _sigmas=new float[_means.length];
    for (int i=0; i < _means.length; i++) {
      _means[i]=(float)frame.vecs()[i].mean();
      _sigmas[i]=(float)frame.vecs()[i].sigma();
    }
  }
}
