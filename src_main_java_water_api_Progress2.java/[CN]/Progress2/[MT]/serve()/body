{
  Job jjob=null;
  if (job_key != null)   jjob=Job.findJob(job_key);
  if (jjob != null && jjob.isCancelled())   return Response.error(jjob.exception == null ? "Job was cancelled by user!" : jjob.exception);
  if (jjob == null || jjob.end_time > 0 || jjob.isCancelled())   return jobDone(jjob,destination_key);
  return jobInProgress(jjob,destination_key);
}
