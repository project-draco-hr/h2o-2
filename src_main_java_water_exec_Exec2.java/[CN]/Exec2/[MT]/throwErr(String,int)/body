{
  int lo=_x, hi=idx;
  if (idx < _x) {
    lo=idx;
    hi=_x;
  }
  String s=msg + " @ " + lo;
  if (lo != hi)   s+="-" + hi;
  s+='\n' + _str + '\n';
  int i;
  for (i=0; i < lo; i++)   s+=' ';
  s+='^';
  i++;
  for (; i < hi; i++)   s+='-';
  if (i <= hi)   s+='^';
  s+='\n';
  throw new IllegalArgumentException(s);
}
