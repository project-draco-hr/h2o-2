{
  Timer t_alltrees=new Timer();
  Tree[] trees=new Tree[ntrees];
  Log.debug2(Sys.RANDF,"Building " + ntrees + " trees");
  Log.debug2(Sys.RANDF,"Number of split features: " + numSplitFeatures);
  Log.debug2(Sys.RANDF,"Starting RF computation with " + data.rows() + " rows ");
  Random rnd=Utils.getRNG(data.seed() + ROOT_SEED_ADD);
  Sampling sampler=createSampler(drfParams);
  for (int i=0; i < ntrees; ++i) {
    long treeSeed=rnd.nextLong() + TREE_SEED_INIT;
    trees[i]=new Tree(job,data,drfParams._depth,drfParams._stat,numSplitFeatures,treeSeed,i,drfParams._verbose,drfParams._exclusiveSplitLimit,sampler);
    if (!drfParams._parallel)     ForkJoinTask.invokeAll(new Tree[]{trees[i]});
  }
  if (drfParams._parallel)   DRemoteTask.invokeAll(trees);
  Log.debug2(Sys.RANDF,"All trees (" + ntrees + ") done in "+ t_alltrees);
}
