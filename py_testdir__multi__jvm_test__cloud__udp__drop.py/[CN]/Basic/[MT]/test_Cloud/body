def test_Cloud(self):
    ports_per_node = 2
    for tryNodes in range(2, 10):
        h2o.verboseprint('Trying cloud of', tryNodes)
        sys.stdout.write('.')
        sys.stdout.flush()
        start = time.time()
        h2o.build_cloud(tryNodes, random_udp_drop=True, timeoutSecs=max(30, (20 * tryNodes)), retryDelaySecs=2, java_heap_GB=1)
        print ('Built cloud of %d in %d s' % (tryNodes, (time.time() - start)))
        h2o.verify_cloud_size()
        h2o.tear_down_cloud()
