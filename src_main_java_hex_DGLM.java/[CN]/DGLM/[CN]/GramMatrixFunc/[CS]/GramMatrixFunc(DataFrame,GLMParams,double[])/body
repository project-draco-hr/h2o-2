{
  _nobs=data._nobs;
  _beta=beta;
  _dense=data.dense();
  _weighted=glmp._family != Family.gaussian;
  _family=glmp._family;
  _link=glmp._link;
  _cMode=glmp._caseMode;
  _cVal=glmp._caseVal;
  _N=data.expandedSz();
  int d=data.largestCatSz();
  _diag=d > 50 ? d : 0;
  _response=data._response;
}
