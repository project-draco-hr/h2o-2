{
  double nobsInv=1.0 / _nobs;
  if (g._xx != null)   for (int i=0; i < g._xx.length; ++i) {
    for (int j=0; j < g._xx[i].length; ++j)     g._xx[i][j]*=nobsInv;
  }
  if (g._diag != null)   for (int i=0; i < _diag; ++i) {
    g._diag[i]*=nobsInv;
  }
  for (int i=0; i < g._xy.length; ++i)   g._xy[i]*=nobsInv;
  g._yy*=nobsInv;
  return g;
}
