@classmethod
def setUpClass(cls):
    SEED = random.randint(0, sys.maxint)
    random.seed(SEED)
    print '\nUsing random seed:', SEED
    localhost = h2o.decide_if_localhost()
    if localhost:
        h2o.build_cloud(2)
    else:
        h2o_hosts.build_cloud_with_hosts()
    global SYNDATASETS_DIR
    SYNDATASETS_DIR = h2o.make_syn_dir()
