{
  gemv(_a,_w,_previous._a,_b,false);
  final double max=Utils.maxValue(_a);
  double scale=0;
  for (int o=0; o < _a.length; o++) {
    _a[o]=Math.exp(_a[o] - max);
    scale+=_a[o];
  }
  for (int o=0; o < _a.length; o++) {
    if (Double.isNaN(_a[o]))     throw new RuntimeException("Numerical instability, predicted NaN.");
    _a[o]/=scale;
  }
}
