{
  final int cidx=chk._cidx - _chunkOff;
  if (cidx >= _espc._ary.length) {
    int newlen=Math.max(_espc._ary.length * 2,cidx + 1);
    _espc._ary=Arrays.copyOf(_espc._ary,newlen);
  }
  if (_chunkTypes.length < _espc._ary.length)   _chunkTypes=Arrays.copyOf(_chunkTypes,_espc._ary.length);
  _espc._ary[cidx]=chk._len;
  _chunkTypes[cidx]=chk.type();
  _naCnt+=chk._naCnt;
  _strCnt+=chk._strCnt;
  for (int i=0; i < _timCnt.length; i++)   _timCnt[i]+=chk._timCnt[i];
  _totalCnt+=chk._len;
}
