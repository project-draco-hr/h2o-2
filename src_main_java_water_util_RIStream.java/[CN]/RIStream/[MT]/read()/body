{
  int attempts=0;
  while (true) {
    try {
      int res=_is.read();
      if (res == -1 && _knownSize && _off < _expectedSz)       Log.warn("premature end of file reported, expected " + _expectedSz + " bytes, but got eof after "+ _off+ " bytes");
      if (res != -1) {
        updateOffset(1);
        if (_pmon != null)         _pmon.update(1);
      }
      return res;
    }
 catch (    IOException e) {
      try2Recover(attempts++,e);
    }
  }
}
