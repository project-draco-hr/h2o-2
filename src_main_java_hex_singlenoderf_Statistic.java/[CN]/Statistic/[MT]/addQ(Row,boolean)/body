{
  final int cls=row.classOf();
  for (  int f : _features)   if (f != -1) {
    if (row.isValid() && row.hasValidValue(f)) {
      if (!regression) {
        short val=row.getEncodedColumnValue(f);
        _columnDists[f][val][cls]++;
      }
 else {
        short val=row.getEncodedColumnValue(f);
        _columnDistsRegression[f][val][cls]++;
      }
    }
  }
}
