{
  final double l2pen=0.5 * lambda * (1 - alpha);
  final double l1pen=lambda * alpha;
  for (int i=0; i < grad.length - 1; ++i) {
    grad[i]+=l2pen * beta[i];
    if (beta[i] < 0)     grad[i]-=l1pen;
 else     if (beta[i] > 0)     grad[i]+=l1pen;
 else     grad[i]=LSMSolver.shrinkage(grad[i],l1pen);
  }
}
