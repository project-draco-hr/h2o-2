{
  _href=href;
  try {
    FileReader r=new FileReader(f);
    try {
      CharBuffer cb=CharBuffer.allocate((int)f.length() + 1);
      while (r.read(cb) != -1)       ;
      _html=cb.flip().toString();
    }
  finally {
      r.close();
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
