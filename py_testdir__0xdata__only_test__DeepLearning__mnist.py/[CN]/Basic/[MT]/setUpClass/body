@classmethod
def setUpClass(cls):
    localhost = h2o.decide_if_localhost()
    h2o.verbose = True
    if localhost:
        h2o.build_cloud(java_heap_GB=2, base_port=54323, random_udp_drop=RANDOM_UDP_DROP)
    else:
        h2o_hosts.build_cloud_with_hosts(base_port=54323, random_udp_drop=RANDOM_UDP_DROP)
    h2o.verbose = False
