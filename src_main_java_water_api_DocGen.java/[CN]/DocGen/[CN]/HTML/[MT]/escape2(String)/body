{
  int len=s.length();
  String ss="";
  for (int i=0; i < len; i++) {
    char c=s.charAt(i);
    if (false)     ;
 else     if (c == '<')     ss+="&lt;";
 else     if (c == '>')     ss+="&gt;";
 else     if (c == '&')     ss+="&amp;";
 else     if (c == '"')     ss+="&quot;";
 else     ss+=c;
  }
  return ss;
}
