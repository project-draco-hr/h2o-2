def testCloud(self):
    baseport = 54300
    ports_per_node = 2
    for tryNodes in range(2, 8):
        sys.stdout.write('.')
        sys.stdout.flush()
        start = time.time()
        h2o.build_cloud(use_this_ip_addr='127.0.0.1', base_port=baseport, node_count=tryNodes, timeoutSecs=30, java_heap_GB=1)
        print ('Build cloud of %d in %d secs' % (tryNodes, (time.time() - start)))
        h2o.verboseprint(h2o.nodes)
        h2o.verify_cloud_size()
        h2o.tear_down_cloud(h2o.nodes)
        baseport += (ports_per_node * tryNodes)
