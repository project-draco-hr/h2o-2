def test_Cloud(self):
    base_port = (54321 + random.randint(0, 256))
    ports_per_node = 2
    tryNodes = 5
    for trial in range(10):
        h2o.verboseprint('Trying cloud of', tryNodes)
        sys.stdout.write('.')
        sys.stdout.flush()
        start = time.time()
        h2o_hosts.build_cloud_with_hosts(tryNodes, base_port=base_port, retryDelaySecs=2, timeoutSecs=max(30, (10 * tryNodes)), java_heap_GB=1)
        print ('trial #%d: Build cloud of %d in %d secs' % (trial, tryNodes, (time.time() - start)))
        h2o.verify_cloud_size()
        time.sleep(5)
        h2o.tear_down_cloud()
