{
  BufferedReader r=null;
  try {
    String pub=System.getProperty("user.home") + "/.ssh/id_rsa.pub";
    r=new BufferedReader(new FileReader(new File(pub)));
    return r.readLine();
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    if (r != null)     try {
      r.close();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
