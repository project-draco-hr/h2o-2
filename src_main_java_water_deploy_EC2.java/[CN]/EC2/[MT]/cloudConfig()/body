{
  return "#cloud-config\n" + "apt_update: false\n" + "runcmd:\n"+ " - grep -q 'fs.file-max = 524288' /etc/sysctl.conf || echo -e '\\nfs.file-max = 524288' >> /etc/sysctl.conf\n"+ " - sysctl -w fs.file-max=524288\n"+ " - echo -e '* soft nofile 524288\\n* hard nofile 524288' > /etc/security/limits.d/increase-max-fd.conf\n"+ " - useradd " + USER + "\n"+ " - mkdir -p /home/"+ USER+ "/.ssh"+ "\n"+ " - cd /home/"+ USER+ "\n"+ " - echo -e '\\n"+ USER+ " ALL=(ALL) NOPASSWD:ALL\\n' >> /etc/sudoers\n"+ " - chown -R "+ USER+ ':'+ USER+ " /home/"+ USER+ "\n"+ " - echo '"+ pubKey()+ "' >> .ssh/authorized_keys\n"+ "";
}
