{
  if (Float.isNaN(col_data))   return;
  int b=bin(col_data);
  _bins[b]++;
  long k=_bins[b];
  if (col_data < _mins[b])   _mins[b]=col_data;
  if (col_data > _maxs[b])   _maxs[b]=col_data;
  double oldM=_MSs[2 * b + 0];
  double newM=_MSs[2 * b + 0]=oldM + (y - oldM) / k;
  _MSs[2 * b + 1]+=(y - oldM) * (y - newM);
}
