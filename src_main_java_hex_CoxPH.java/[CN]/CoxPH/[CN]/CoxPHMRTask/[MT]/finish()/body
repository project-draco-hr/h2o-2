{
  if (!_use_start_column) {
    for (int t=rcumsumRisk.length - 2; t >= 0; t--)     rcumsumRisk[t]+=rcumsumRisk[t + 1];
    for (int j=0; j < rcumsumXRisk.length; j++)     for (int t=rcumsumXRisk[j].length - 2; t >= 0; t--)     rcumsumXRisk[j][t]+=rcumsumXRisk[j][t + 1];
    for (int j=0; j < rcumsumXXRisk.length; j++)     for (int k=0; k < rcumsumXXRisk[j].length; k++)     for (int t=rcumsumXXRisk[j][k].length - 2; t >= 0; t--)     rcumsumXXRisk[j][k][t]+=rcumsumXXRisk[j][k][t + 1];
  }
}
