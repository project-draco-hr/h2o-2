def tear_down_cloud(nodeList=None, sandbox_ignore_errors=False):
    if (not nodeList):
        nodeList = nodes
    try:
        for n in nodeList:
            n.terminate()
            verboseprint('tear_down_cloud n:', n)
    finally:
        check_sandbox_for_errors(sandbox_ignore_errors=sandbox_ignore_errors)
        nodeList[:] = []
