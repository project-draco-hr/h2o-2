def log(cmd, comment=None):
    with open((LOG_DIR + '/commands.log'), 'a') as f:
        f.write((str(datetime.datetime.now()) + ' -- '))
        if cmd:
            f.write(urlparse.unquote(cmd))
            if comment:
                f.write('    #')
                f.write(comment)
            f.write('\n')
        elif comment:
            f.write((comment + '\n'))
