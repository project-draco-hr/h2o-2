def find_file(base):
    f = base
    if (not os.path.exists(f)):
        f = ('../' + base)
    if (not os.path.exists(f)):
        f = ('../../' + base)
    if (not os.path.exists(f)):
        f = ('py/' + base)
    if (not os.path.exists(f)):
        raise Exception(('unable to find file %s' % base))
    return f
