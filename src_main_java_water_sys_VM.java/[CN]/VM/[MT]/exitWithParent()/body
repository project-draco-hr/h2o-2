{
  Thread thread=new Thread(){
    @Override public void run(){
      for (; ; ) {
        int b;
        try {
          b=System.in.read();
        }
 catch (        Exception e) {
          b=-1;
        }
        if (b < 0) {
          Log.info("Assuming parent done, exit(0)");
          System.exit(0);
        }
      }
    }
  }
;
  thread.setDaemon(true);
  thread.start();
}
