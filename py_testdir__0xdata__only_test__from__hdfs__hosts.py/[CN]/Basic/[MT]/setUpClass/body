@classmethod
def setUpClass(cls):
    localhost = h2o.decide_if_localhost()
    if localhost:
        h2o.build_cloud(3, use_hdfs=True, hdfs_version='cdh4', hdfs_name_node='172.16.2.176')
    else:
        h2o_hosts.build_cloud_with_hosts(use_hdfs=True, hdfs_version='cdh4', hdfs_name_node='172.16.2.176')
