{
  new Thread(new Runnable(){
    public void run(){
      while (true) {
        try {
          new RequestServer(H2O._apiSocket);
          break;
        }
 catch (        Exception ioe) {
          Log.err(this,Sys.HTTPD,"Launching NanoHTTP server got ",ioe);
          try {
            Thread.sleep(1000);
          }
 catch (          InterruptedException e) {
          }
        }
      }
    }
  }
,"Request Server launcher").start();
}
