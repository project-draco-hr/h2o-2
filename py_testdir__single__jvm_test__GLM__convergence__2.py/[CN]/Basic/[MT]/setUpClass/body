@classmethod
def setUpClass(cls):
    global SEED
    SEED = 2437856391921621805
    random.seed(SEED)
    print '\nUsing random seed:', SEED
    localhost = h2o.decide_if_localhost()
    if localhost:
        h2o.build_cloud(1, use_flatfile=True)
    else:
        h2o_hosts.build_cloud_with_hosts()
